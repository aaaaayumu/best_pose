<%= render 'shared/second_header' %>

<%= form_with model: @user, url: "/users", class: 'registration_main', local: true do |f| %>
  <div class="form_wrapper">
    <div class="form_header">
      ユーザー新規登録
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form_main">
      <div class="form_group">
        <%= f.label :nickname, 'ニックネーム(必須)' %><br />
        <%= f.text_field :nickname, placeholder: "例) 筋肉太郎",class: 'input_field' %>
      </div>
      <div class="form_group">
        <%= f.label :email, 'メールアドレス(必須)' %><br />
        <%= f.email_field :email, placeholder: "携帯・PCどちらでも可",class: 'input_field' %>
      </div>
      <div class="form_group">
        <%= f.label :password, 'パスワード(必須)' %><br />
        <%= f.password_field :password, placeholder: "半角英数字6文字以上", class: 'input_field' %>
      </div>
      <div class="form_group">
        <%= f.label :password_confirmation, 'パスワード確認(必須)' %><br />
        <%= f.password_field :password_confirmation, placeholder: "同じパスワードを入力", class: 'input_field' %>
      </div>
      <div class="form_group">
        <%= f.label :body_height, '身長cm(任意)' %><br />
        <%= f.text_field :body_height, placeholder: "例) 175.6 (半角数字で入力)", class: 'input_field' %>
      </div>
      <div class="form_group">
        <%= f.label :body_weight, '体重kg(任意)' %><br />
        <%= f.text_field :body_weight, placeholder: "例) 84.5 (半角数字で入力)", class: 'input_field' %>
      </div>
      <div class="form_group">
        <%= f.label :self_introduction, '自己紹介文(任意)' %><br />
        <%= f.text_area :self_introduction, placeholder: "例) 大会成績など自由に記述", class: 'input_area' %>
      </div>
    </div>

    <div class="form_footer">
      <%= f.submit 'ユーザー登録', class: 'form_submit' %><br />
      <div class="return_btn">
        <%= link_to '戻る', root_path %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'shared/second_footer' %>

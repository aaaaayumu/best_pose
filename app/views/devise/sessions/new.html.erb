<%= render 'shared/second_header' %>

<%= form_with model: @user, url: '/users/sign_in', class: 'form', local: true do |f| %>
  <div class="form_wrapper">
    <div class="form_header">
      ログインページ
    </div>

    <div class='login-flash-message'>
      <%= flash[:alert] %>
    </div>
    
    <div class="form_main">
      <div class="form_group">
        <%= f.label :email, 'メールアドレス(必須)' %><br />
        <%= f.email_field :email, class: 'input_field' %>
      </div>
      <div class="form_group">
        <%= f.label :password, 'パスワード(必須)' %><br />
        <%= f.password_field :password, class: 'input_field' %>
      </div>
    </div>

    <div class="form_footer">
      <%= f.submit 'ログイン', class: 'form_submit' %><br />
      <div class="return_btn">
        <%= link_to '戻る', root_path %>
      </div>
    </div>
  </div>
  
<% end %>

<%= render 'shared/second_footer' %>

